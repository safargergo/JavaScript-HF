<%- include("header") -%>
    <div class="container">

        <form method="POST">

            <Br /><Br /><Br />

            <div class="row">
                <div class="col-lg-12" style="text-align: center;">
                    <h1>
                        <% if (typeof route === "undefined") { %>
                            Adding new flight
                        <% }else{ %>
                            Flight editing
                        <% } %>
                    </h1>
                </div>
            </div>

            <Br /><Br />

            <div class="row">
                <div class="col-lg-4" style="text-align: right;">
                    <label for="Start" class="col-form-label">Start</label>
                </div>
                <div class="col-lg-4">
                    <div class="row g-3 align-items-center">
                        <div class="col-lg-12">
                            <input type="text" id="Start" class="form-control" name="Start"
                                value="<%= (typeof route === "undefined") ? "" : route.Start %>"
                                style="background-color: lightcyan;">
                        </div>
                    </div>
                </div>
            </div>

            <Br />

            <div class="row">
                <div class="col-lg-4" style="text-align: right;">
                    <label for="Destination" class="col-form-label">Destination</label>
                </div>
                <div class="col-lg-4">
                    <div class="row g-3 align-items-center">
                        <div class="col-lg-12">
                            <input type="text" id="Destination" class="form-control" name="Destination"
                                value="<%= (typeof route === "undefined") ? "" : route.Destination %>"
                                style="background-color: lightcyan;">
                        </div>
                    </div>
                </div>
            </div>

            <Br />

            <div class="row">
                <div class="col-lg-4" style="text-align: right;">
                    <label for="Distance" class="col-form-label">Distance (km)</label>
                </div>
                <div class="col-lg-4">
                    <div class="row g-3 align-items-center">
                        <div class="col-lg-12">
                            <input type="number" id="Distance" class="form-control" name="Distance"
                                value="<%= (typeof route === "undefined") ? "" : route.Distance %>"
                                style="background-color: lightcyan;">
                        </div>
                    </div>
                </div>
            </div>

            <Br />

            <div class="row">
                <div class="col-lg-4" style="text-align: right;">
                    <label for="Departure" class="col-form-label">Departure time (UTC-GMT)</label>
                </div>
                <div class="col-lg-4">
                    <div class="row g-3 align-items-center">
                        <div class="col-lg-12">
                            <input type="text" id="Departure" class="form-control" name="Departure"
                                value="<%= (typeof route === "undefined") ? "" : route.Departure %>"
                                style="background-color: lightcyan;">
                        </div>
                    </div>
                </div>
            </div>

            <Br />

            <div class="row">
                <div class="col-lg-4" style="text-align: right;">
                    <label for="Arrival" class="col-form-label">Arrival time (UTC-GMT)</label>
                </div>
                <div class="col-lg-4">
                    <div class="row g-3 align-items-center">
                        <div class="col-lg-12">
                            <input type="text" id="Arrival" class="form-control" name="Arrival"
                                value="<%= (typeof route === "undefined") ? "" : route.Arrival %>"
                                style="background-color: lightcyan;">
                        </div>
                    </div>
                </div>
            </div>

            <Br /><Br />

            <div class="row">
                <div class="col-lg-5">

                </div>
                <div class="col-lg-1" style="text-align: left;">
                    <input type="submit" class="btn btn-outline-success" value="Save"/>
                </div>
                <div class="col-lg-1" style="text-align: right;">
                    <a class="btn btn-outline-secondary" href="/futureflights/<%= aircraft._id %>">Cancel</a>
                </div>
            </div>

        </form>

    </div>
<%- include("footer") -%> 