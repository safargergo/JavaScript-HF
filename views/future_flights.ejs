<%- include("header") -%>
    <div class="col-lg-12" style="text-align: right;">
        <label class="col-sm-2 col-form-label col-form-label-sm" >fel_haszn_1</label>
        <a class="btn btn-link btn-lg" href="/logout" id="logout">logout</a>
    </div>

    <div class="container">
        <div class="row">

        </div>
        <Br />

        <div class="row">
            <div class="col-lg-12" style="text-align: left;">
                <h1>Future flights of aircraft:
                    <tab style="color: red;"><%= aircraft.RegMark %></tab>
                </h1>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12" style="text-align: right;">
                <a class="btn btn-success btn-sm" href="/futureflights/<%= aircraft._id %>/addnew">Register new flight</a>
                <a class="btn btn-warning btn-sm" href="/aircrafts">Back</a>
            </div>

        </div>

        <Br />

        <div class="row">
            <div class="col-lg-12">
                <table class="table table-striped table-bordered" style="text-align: center;">
                    <tr>
                        <th>Start</th>
                        <th>Destination</th>
                        <th>Distance (km)</th>
                        <th>Departure time (UTC-GMT)</th>
                        <th>Arrival time (UTC-GMT)</th>
                        <th>&nbsp;</th>
                    </tr>

                    <% if (!(typeof routes === "undefined")) { %>
                    <% routes.forEach(function(route){ %>
                        <tr>
                            <th><%= route.Start %></th>
                            <th><%= route.Destination %></th>
                            <th><%= route.Distance %></th>
                            <th><%= route.Departure.replace("T", " "); %></th>
                            <th><%= route.Arrival.replace("T", " "); %></th>
                            <th>
                                <a class="btn btn-outline-secondary btn-sm" href="/futureflights/<%= aircraft._id %>/complete/<%= route._id %>">Complete</a>
                                <a class="btn btn-primary btn-sm" href="/futureflights/<%= aircraft._id %>/edit/<%= route._id %>">Edit</a>
                                <a class="btn btn-danger btn-sm" href="/futureflights/<%= aircraft._id %>/del/<%= route._id %>">Delete</a>
                            </th>
                        </tr>
                    <% }); %>
                    <% } %>

                </table>
            </div>

        </div>

    </div>
<%- include("footer") -%> 