<%- include("header") -%>
    <div class="container">

        <Br /><Br /><Br />

        <div class="row">
            <div class="col-lg-12" style="text-align: center;">
                <h1>The plane database</h1>
            </div>
        </div>

        <Br /><Br />
        <hr />
        <Br />

        <div class="row">
            <div class="col-lg-12" style="text-align: center;">
                <h4>Reset password</h4>
            </div>
        </div>

        <Br />

        <div class="row">
            <div class="col-lg-5"></div>

            <div class="col-lg-2" style="text-align: center;">
                <form method="post">
                    <div class="mb-3">
                        <div class="col-lg-12">
                            <input type="text" class="form-control" id="Username" aria-describedby="Username" name="Username"
                                placeholder="Username" style="text-align: center">
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="col-lg-12">
                            <input type="email" class="form-control" id="Email" placeholder="Email" name="Email"
                                style="text-align: center">
                        </div>
                    </div>
                    <Br />
                    <input type="submit" class="btn btn-primary" value="Send password"/>
                </form>
            </div>

        </div>

        <Br />
        <hr /><Br />

        <div class="row">
            <div class="col-lg-12" style="text-align: center;">
                <a class="btn btn-link btn-sm" href="/">Back to login</a>
            </div>
        </div>

        <Br /><Br />

    </div>
<%- include("footer") -%> 